@using TraversalCoreProje.EntityLayer
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Aktif Tur Rotalarımız</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Gün</th>
            <th>Kapasite</th>
            <th>Fiyat</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.DestinationID</th>
                <td>@item.City</td>
                <td>@item.DayNight</td>
                <td>@item.Capacity</td>
                <td>$@item.Price</td>
                <td>
                    <a class="btn btn-warning" href="#">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


